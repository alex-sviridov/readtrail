[Unit]
Description=ReadTrail Backend Staging Container
After=network-online.target
Wants=network-online.target

[Container]
ContainerName=readtrail-backend-stage
Image=ghcr.io/alex-sviridov/readtrail/backend:stage
Volume=readtrail-backenddata-stage.volume:/pb/pb_data
Network=readtrail-stage.network
AutoUpdate=registry

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=default.target
