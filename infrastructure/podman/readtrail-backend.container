[Unit]
Description=ReadTrail Backend Container
After=network-online.target
Wants=network-online.target

[Container]
ContainerName=readtrail-backend
Image=ghcr.io/alex-sviridov/readtrail/backend:latest
Volume=readtrail-backenddata.volume:/pb/pb_data
Network=readtrail.network
AutoUpdate=registry

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=default.target
