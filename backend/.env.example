# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Authentication Configuration
# Set AUTH_ENABLE=false for no authentication (single default user)
# Set AUTH_ENABLE=true for HTTP header authentication
AUTH_ENABLE=false

# HTTP Header Authentication
# Header name for user identification (when AUTH_ENABLE=true)
AUTH_REMOTE_HTTP_HEADER=X-Auth-User

# Guest User Mode
# Allow anonymous users when AUTH_ENABLE=true
# Guest data will be migrated when user provides auth header
AUTH_GUEST_USER_ENABLE=false
