# Open Library API URL
VITE_OPEN_LIBRARY_API_URL=https://openlibrary.org

# Backend API Configuration
# Base URL for the ReadTrail backend API
VITE_API_BASE_URL=http://localhost:3000/api

# API request timeout in milliseconds (default: 10000)
VITE_API_TIMEOUT=10000

# Authentication Configuration
# Enable authentication (true/false)
# When false: Single default user, no authentication required
# When true: Requires authentication header specified below
VITE_AUTH_ENABLED=false

# HTTP header name for authentication (e.g., X-Auth-User, X-Remote-User)
# This header should contain the user identifier (username, email, etc.)
VITE_AUTH_REMOTE_HEADER_NAME=X-Auth-User

# Enable guest user mode (true/false)
# When true: Allows anonymous usage with data migration on authentication
# When false: Authentication required immediately
VITE_GUEST_USER_ENABLED=true
